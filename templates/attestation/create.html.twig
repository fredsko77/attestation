{% extends 'base.html.twig' %}

{% block body %}
    <h1>Générer une attestation</h1>
    <div class="col-12">
        <div class="row">
            <form action="{{ path('app_attestation_create') }}" method="post" onsubmit="handleAttestation(this, event)">
                <div class="form-group">
                    <label for="etudiant" class="form-label">Etudiants</label>
                    <select name="etudiant" id="etudiant" class="form-select" required onchange="getConvention(this)">
                        <option value="">Selectionner une option</option>
                        {% for etudiant in etudiants %}
                            <option value="{{ etudiant.id }}">{{ etudiant.prenom ~ ' ' ~ etudiant.nom }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="convention" class="form-label">Conventions</label>
                    <input type="text" class="hidden" name="convention" id="convention">
                    <input type="text" class="form-control" id="conventionName" disabled>
                </div>
                <div class="form-group">
                    <label for="message" class="form-label">Message</label>
                    <textarea name="message" id="message" cols="30" rows="6" class="form-control" required>
                    </textarea>
                </div>
                <button type="submit" class="btn btn-primary">Générer l'attestation</button>
            </form>
        </div>
    </div>
{% endblock %}
